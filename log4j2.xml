<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appender name="file" type="File">
        <File fileName="log/app.log"/>
        <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
    </Appender>

    <Root level="INFO">
        <AppenderRef ref="file"/>
    </Root>

</Configuration>